{
  "openapi": "3.0.0",
  "info": {
    "title": "API Documentation",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:1812",
      "description": "Local server"
    }
  ],
 
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "UserList": {
        "type": "object",
        "properties": {
          "content": {
            "$ref": "#/components/schemas/Pagination"
          }
        }
      },
      "Pagination": {
        "type": "object",
        "properties": {
          "tongSoTrang": {
            "type": "integer"
          },
          "trangHienTai": {
            "type": "integer"
          },
          "tongSoLuongHienCo": {
            "type": "integer"
          },
          "soPhanTuHienTai": {
            "type": "integer"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/User"
            }
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "tags": [
    {
      "name": "QuanLyNguoiDung",
      "description": "APIs quản lý người dùng"
    },
    {
      "name": "QuanLyPhim",
      "description": "APIS quản lý phim"
    },
    {
      "name": "QuanLyDatVe",
      "description": "APIS quản lý vé xem phim"
    },
    {
      "name": "QuanLyRap",
      "description": "APIS quản lý rạp chiếu phim"
    }
  ],
  "paths": {
  
  
    "/api/QuanLyNguoiDung/DanhSachNguoiDungPhanTrang": {
      "get": {
        "summary": "Get a list of users",
        "tags": [
          "QuanLyNguoiDung"
        ],
        "parameters": [
          {
            "name": "soTrang",
            "in": "query",
            "description": "Số trang hiện tại",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1 
            }
          },
          {
            "name": "SoPhanTuTrenTrang",
            "in": "query",
            "description": "Số phần tử cần hiển thị trên trang",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10 
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Danh sách người dùng đã phân trang",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserList"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/QuanLyNguoiDung/layDanhSachNguoiDung": {
      "get": {
        "summary": "Lấy danh sách người dùng",
        "tags": [
          "QuanLyNguoiDung"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Danh sách người dùng",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserList"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/QuanLyNguoiDung/themNguoiDung": {
      "post": {
        "summary": "Create a new user",
        "tags": [
          "QuanLyNguoiDung"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "taiKhoan": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "soDT": {
                    "type": "string"
                  },
                  "matKhau": {
                    "type": "string"
                  },
                  "hoTen": {
                    "type": "string"
                  },
                  "diem": {
                    "type": "integer"
                  }
                },
                "required": [
                  "taiKhoan",
                  "email",
                  "soDT",
                  "matKhau",
                  "hoTen",
                  "diem"
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "User created successfully"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/QuanLyNguoiDung/capNhatThongTinNguoiDung": {
      "put": {
        "summary": "Update user information",
        "tags": [
          "QuanLyNguoiDung"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "taiKhoan": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "soDT": {
                    "type": "string"
                  },
                  "matKhau": {
                    "type": "string"
                  },
                  "hoTen": {
                    "type": "string"
                  },
                  "maLoaiNguoiDung": {
                    "type": "string"
                  }
                },
                "required": [
                  "taiKhoan",
                  "email",
                  "soDT",
                  "matKhau",
                  "hoTen",
                  "maLoaiNguoiDung"
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "User information updated successfully"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
    
    
  }
}